<%= form_for([@post, @post.comments.build]) do |f| %>
  <div class= "field">
    <%= f.label :name %><br />
    <%= f.text_field :commenter %>
  </div>
  <div class= "field">
    <%= f.label :content %><br />
    <%= f.text_area :body %>
  </div>
  <div class= "actions">
    <%= f.submit %>
  </div>
<% end %>